<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/authorReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Andres Gomes "
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/authorSays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="says : "
        app:layout_constraintBottom_toBottomOf="@+id/authorReview"
        app:layout_constraintStart_toEndOf="@+id/authorReview"
        app:layout_constraintTop_toTopOf="@+id/authorReview" />

    <TextView
        android:id="@+id/reviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Far from being a good movie, with tons of flaws but already pointing to the pattern of the whole Ritchie's filmography."
        app:layout_constraintStart_toStartOf="@+id/authorReview"
        app:layout_constraintTop_toBottomOf="@+id/authorReview" />

</android.support.constraint.ConstraintLayout>

